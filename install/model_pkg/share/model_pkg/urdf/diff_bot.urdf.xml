<?xml version="1.0" ?>
<robot name="diff_bot">
    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://model_pkg/models/base.dae"/>
            </geometry>
        </visual>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0.1 0.075 0.065"/>
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
    </joint>

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <mesh filename="package://model_pkg/models/left_wheel.dae"/>
            </geometry>
        </visual>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="-0.1 0.075 0.065"/>
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
    </joint>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <mesh filename="package://model_pkg/models/right_wheel.dae"/>
            </geometry>
        </visual>
    </link>

</robot>
